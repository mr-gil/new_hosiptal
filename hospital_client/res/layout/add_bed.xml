<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:editTextFormExample="http://schemas.android.com/apk/res/com.sdu.edu.main"
    android:id="@+id/acbuwa_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="8dip" >

    <include
        android:id="@+id/add_title"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        layout="@layout/acbuwa_topbar" />
    <!--  -->

    <com.sdu.edu.ui.SlidingLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:padding="8dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="class"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/bed_class_group"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/bed_first"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/bed_second"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="2"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/bed_third"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="price"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <!-- 需要判断是否是double类型 -->

                <EditText
                    android:id="@+id/bed_add_price"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:background="#FFE1FF"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="availability"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/bed_availability_group"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/bed_yes"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="Yes"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/bed_no"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/bed_insert"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="insert"
                android:textColor="#000000" />
        </LinearLayout>
    </com.sdu.edu.ui.SlidingLinearLayout>

</LinearLayout>