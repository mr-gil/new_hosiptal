<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFE1FF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/bed_list_delete"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/doctor_del" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical" >

            <!-- 每一行的信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="ID:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/bed_list_id"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="001"
                    android:textColor="#000000" />
            </LinearLayout>
            <!-- 每一行的信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="calss:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/bed_list_class"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="first"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!-- 图片下每一行信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="price:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bed_list_price"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:text="price"
            android:textColor="#000000" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:text="availability"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bed_list_ava"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="yes"
            android:textColor="#000000" />
    </LinearLayout>
   
    

</LinearLayout>