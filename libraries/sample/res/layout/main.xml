<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="name"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="gender"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/doctor_gender_group"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/doctor_male"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        
                        android:text="male"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/doctor_female"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                       
                        android:text="female"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="fees"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <!-- 需要判断是否是double类型 -->

                <EditText
                    android:id="@+id/doctor_add_fees"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:background="#FFE1FF"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="speciality"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="phonenumber"
                    android:textColor="#000000"
                    android:textSize="20dp" />

             
            </LinearLayout>
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="email"
                    android:textColor="#000000"
                    android:textSize="20dp" />

             
            </LinearLayout>
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="password"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/doctor_add_password"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:background="#FFE1FF"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    
                    android:textColor="#000000"
                     />
            </LinearLayout>
            
         <Button
             android:id="@+id/doctor_insert"
             android:layout_width="280dp"
             android:layout_height="40dp"
             android:text="insert"
             android:textColor="#000000"
             />   
            
            
        </LinearLayout>

    <com.darvds.ribbonmenu.RibbonMenuView
        android:id="@+id/ribbonMenuView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>